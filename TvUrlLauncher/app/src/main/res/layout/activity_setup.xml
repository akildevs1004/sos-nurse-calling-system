<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="28dp"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV Kiosk Setup"
        android:textSize="22sp"
        android:paddingBottom="18dp" />

    <EditText
        android:id="@+id/ipInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP Address (e.g., 192.168.2.28)"
        android:inputType="text"
        android:textSize="18sp"
        android:background="@drawable/focus_edittext"
        android:padding="12dp"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/portInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Port (e.g., 3000)"
        android:inputType="number"
        android:textSize="18sp"
        android:background="@drawable/focus_edittext"
        android:padding="12dp"
        android:singleLine="true"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/pathInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Path (optional) (e.g., /alarm/tvmonitor1)"
        android:inputType="text"
        android:textSize="18sp"
        android:background="@drawable/focus_edittext"
        android:padding="12dp"
        android:singleLine="true"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/saveOpenBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE &amp; OPEN"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:padding="14dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
