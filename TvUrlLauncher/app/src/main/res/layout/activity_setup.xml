<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="28dp"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV Kiosk Setup"
        android:textSize="22sp"
        android:paddingBottom="18dp" />

    <EditText
         android:background="@drawable/focus_edittext"
    android:focusable="true"
    android:focusableInTouchMode="true"

        android:id="@+id/urlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter URL (e.g., 192.168.1.10:3000)"
        android:inputType="textUri"
        android:textSize="18sp"
        android:padding="12dp" />

    <Button
        android:id="@+id/saveOpenBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:text="SAVE &amp; OPEN"

        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:padding="14dp" />

    <TextView
        android:id="@+id/helpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip: Long-press top-left corner in player screen to unlock admin settings."
        android:textSize="14sp"
        android:paddingTop="20dp" />
</LinearLayout>
